{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Debug Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debug"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start with Nodemon Debug",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debug-dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Kill Node Processes",
      "type": "shell",
      "command": "taskkill",
      "args": ["/F", "/IM", "node.exe"],
      "windows": {
        "command": "taskkill",
        "args": ["/F", "/IM", "node.exe"]
      },
      "linux": {
        "command": "pkill",
        "args": ["-f", "node"]
      },
      "osx": {
        "command": "pkill",
        "args": ["-f", "node"]
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
